{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/ts/**/*.ts"],
  "watchOptions": {
    "watchDirectory": "useFsEvents"
  },
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public/"
  }
}